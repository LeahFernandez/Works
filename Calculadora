    private void jButton14ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.num1=Float.parseFloat(this.jLabel1.getText());
        this.operador="+";
        this.jLabel1.setText("");
    }                                         

    private void jButton20ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.num2=Float.parseFloat(this.jLabel1.getText());
        
        switch(this.operador){
            case "+":this.jLabel1.setText(nocero(this.num1+this.num2));break;
            case "-":this.jLabel1.setText(nocero(this.num1-this.num2));break;
            case "X":this.jLabel1.setText(nocero(this.num1*this.num2));break;
            case "/":this.jLabel1.setText(nocero(this.num1/this.num2));break;
        }
    }                                         

    private void jButton13ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.num1=Float.parseFloat(this.jLabel1.getText());
        this.operador="-";
        this.jLabel1.setText("");
    }                                         

    private void jButton11ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        this.num1=Float.parseFloat(this.jLabel1.getText());
        this.operador="X";
        this.jLabel1.setText("");
    }                                         

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.num1=Float.parseFloat(this.jLabel1.getText());
        this.operador="/";
        this.jLabel1.setText("");
    }                                        

    public String nocero(float resultado){
        String retorno="";
        retorno=Float.toString(resultado);
        if(resultado%1==0){
            retorno=retorno.substring(0, retorno.length()-2);
        }
        return retorno;
    }
